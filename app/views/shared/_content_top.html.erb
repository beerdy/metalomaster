      <% if @products_special.size >= 2 %>
      <div class="wrap">
        <h3>Выгодное предложение</h3>
      </div>
      <div class="line"> </div>
      <div class="wrap">
        <div class="ocarousel_slider">  
          <div class="ocarousel example_photos" data-ocarousel-perscroll="3">
            <div class="ocarousel_window">
            <% @products_special.each do |product|%>
              <a href="/products/<%=product.id%>" title="<%=product.title%>"><img src="<%=product.image.url%>" alt="<%=product.title%>" height="100"/><p><%=product.title%></p></a>
              <%end%>
            </div>
            <%if @products_special.size>8%>
            <span>           
              <a href="#" data-ocarousel-link="left" style="float: left;" class="prev"> </a>
              <a href="#" data-ocarousel-link="right" style="float: right;" class="next"> </a>
            </span>
            <%end%>
          </div>
        </div>  
      </div>
      <%end%>
      